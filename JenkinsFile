pipeline {
    agent any

stages{
    stage('without docker') {
            steps {
               sh '''
                    echo "without docker"
                    ls -la
                    touch container-no.txt
                '''
            }
        }
    stage('with docker') {
        agent{
            docker{
                    image 'node:18-alpine'
                    reuseNode true
            }
        }
            steps {
               sh '''
                    echo "with docker"
                    ls -la
                    touch container-yes.txt
                '''
                
            }
    }
    stage('Build in docker container') {
        agent{
            docker{
                    image 'node:18-alpine'
                    reuseNode true
            }
        }
            steps {
               sh '''
                    echo "building now"
                    ls -la
                    node --version
                    npm --version
                    npm ci
                    npm run build
                    ls -la
                '''
                
            }
    }
}
}
